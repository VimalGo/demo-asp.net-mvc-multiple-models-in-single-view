@{
    ViewData["Title"] = "Using ViewData";
}

@{
    IEnumerable<Department> departments = ViewData["Departments"] as IEnumerable<Department>;
    IEnumerable<Employee> employees = ViewData["Employees"] as IEnumerable<Employee>;
}

<h1>Using ViewData</h1>

<h4>Results</h4>

<table>
    <thead>
        <tr>
            <td>Department Id</td>
            <td>Depart Code</td>
            <td>Depart Name</td>
            <td>Is Active</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Department dept in departments)
        {
            <tr>
                <td>@dept.DepartmentId</td>
                <td>@dept.DeptCode</td>
                <td>@dept.DeptName</td>
                <td>@dept.IsActive</td>
            </tr>
        }
    </tbody>
</table>


<br />
<br />

<table>
    <thead>
        <tr>
            <td>Employee Id</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Dept Id</td>
            <td>Is Active</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee emp in employees)
        {
            <tr>
                <td>@emp.EmployeeId</td>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.DeptId</td>
                <td>@emp.IsActive</td>
            </tr>
        }
    </tbody>
</table>



<br />
<br />

<h4>C# Code</h4>
<pre>
<code>
        public IActionResult UsingViewData()
        {
            DepartmentHelper deptHelper = new DepartmentHelper();
            EmployeeHelper empHelper = new EmployeeHelper();

            ViewData["Departments"] = deptHelper.GetDepartments();
            ViewData["Employees"] = empHelper.GetEmployees();

            return View();
        }
    </code>
</pre>

